<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:id="@+id/parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_replay_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击联系方式自动复制哦~"
            android:textColor="@color/grey"
            android:textSize="18dip" />

        <View
            android:id="@+id/line0"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="8dip"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:textColor="@color/text_content"
            android:textSize="18dip" />

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="8dip"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:textColor="@color/text_content"
            android:textSize="18dip" />

        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="8dip"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:textColor="@color/text_content"
            android:textSize="18dip" />

        <!--
             <View
            android:id="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="20dip"
            android:background="@color/grey" />
        -->
        
        <TextView
        android:id="@+id/tv_import"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_marginTop="16dip"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:text="亲，联系时请说明是来自喵喵官方货源"
        android:textColor="@color/title_bg_color" />
    </LinearLayout>

    

    <!--
         <RelativeLayout
        android:id="@+id/layout_stars"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/layout_content"
        android:layout_alignTop="@+id/layout_content" >
    -->

    <ImageView
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/userguide_star" />
    <!-- </RelativeLayout> -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:src="@drawable/bg_dialog_cat" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/star3"
        android:layout_alignRight="@+id/layout_content"
        android:src="@drawable/userguide_star" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/star2"
        android:layout_alignTop="@+id/star1"
        android:src="@drawable/userguide_star" />

</RelativeLayout>
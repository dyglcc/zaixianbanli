<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_publish"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dip" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/title_maijiaxiu" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tut1" />

                <LinearLayout
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最美的买家口碑展示"
                        android:textColor="@color/title_bg_color"
                        android:textSize="18dip" />

                    <TextView
                        android:layout_width="170dip"
                        android:layout_height="wrap_content"
                        android:text="时间轴精美设计，诚意之作"
                        android:textColor="#777777"
                        android:textSize="14dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tut2" />

                <LinearLayout
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关联商品，直接购买"
                        android:textColor="@color/title_bg_color"
                        android:textSize="18dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="给陌生买家一个下单的理由"
                        android:textColor="#777777"
                        android:textSize="14dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tut3" />

                <LinearLayout
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自动同步社交平台"
                        android:textColor="@color/title_bg_color"
                        android:textSize="18dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="让口碑营销事半功倍"
                        android:textColor="#777777"
                        android:textSize="14dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_empty_see"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="14dip"
            android:background="@drawable/selector_main_reds"
            android:text="上传我的第一个买家秀"
            android:textColor="@color/white"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/tv_empty_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:text="瞄一眼别人的买家秀"
            android:textColor="@color/title_bg_color"
            android:textSize="16dip" />
    </LinearLayout>

</ScrollView>
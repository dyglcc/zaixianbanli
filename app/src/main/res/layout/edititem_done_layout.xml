<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg_color"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="64dip"
            android:layout_height="@dimen/title_height"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/arrow_title_left"
            android:text="@string/back"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_back_new"
            android:layout_width="80dip"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/selector_button_click"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/selector_color_title_press"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="6dip"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="180dip"
            android:singleLine="true"
            android:text="发布成功"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_preview"
            android:layout_width="64dip"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_button_click"
            android:gravity="center"
            android:text="预览"
            android:textColor="@color/selector_color_title_press"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_success"
                android:layout_marginTop="-6dip"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/ll_share_friends"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/edititem_img_friends" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="发送微信好友"
                        android:textColor="#555555"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/shopedit_icon_in" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/ll_share_moments"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/edititem_img_moments" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="分享到朋友圈"
                        android:textColor="#555555"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/shopedit_icon_in" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/ll_share_onekey"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/edititem_img_onekey" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="一键分享到微博 QQ 空间"
                        android:textColor="#555555"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/shopedit_icon_in" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey" />

                <View
                    android:id="@+id/line_up"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/ll_newitem"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/edititem_img_newitem" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="继续发布商品"
                        android:textColor="#555555"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/shopedit_icon_in" />
                </LinearLayout>

                <View
                    android:id="@+id/line_down"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_success"
                android:layout_width="fill_parent"
                android:layout_height="125dp"
                android:layout_marginTop="10dip"
                android:layout_below="@+id/layout_show_label"
                android:src="@drawable/edititem_img_success" />

            <LinearLayout
                android:id="@+id/layout_show_label"
                android:layout_width="fill_parent"
                android:layout_height="46dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                android:background="@drawable/tag_bar_bg"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_selected"
                    android:paddingRight="@dimen/activity_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/tag_bg"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:textSize="@dimen/tag_text_size" />

                <TextView
                    android:id="@+id/tv_show_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dip"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginLeft="10dip"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dip"
                    android:text="给商品加一个标签吧"
                    android:textColor="@color/title_bg_color"
                    android:textSize="18dip" />
                 <TextView
                    android:id="@+id/tv_modify_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:paddingRight="20dip"
                    android:gravity="right|center_vertical"
                    android:ellipsize="end"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:text="修改标签"
                    android:textColor="@color/title_bg_color"
                    android:textSize="18dip" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
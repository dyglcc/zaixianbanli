<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="QFAppTheme" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/QFActionbarStyle</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/QFActionbarStyle</item>
        <item name="windowContentOverlay">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/common_background</item>
    </style>

    <style name="QFTransparent" parent="QFAppTheme">
　　          <item name="android:windowBackground">@color/transparent</item>
　　          <item name="android:windowIsTranslucent">true</item>
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
　　</style>

    <style name="QFActionbarStyle" parent="Widget.Sherlock.ActionBar.Solid">
        <item name="background">@color/common_background_red</item>
        <item name="backgroundStacked">@color/common_background_red</item>
        <item name="backgroundSplit">@color/common_background_red</item>
        <item name="titleTextStyle">@style/QFActionbarTextStyle</item>
        <item name="android:background">#fd778e</item>
        <item name="android:backgroundStacked" tools:targetApi="14">#fd778e</item>
        <item name="android:backgroundSplit" tools:targetApi="14">#fd778e</item>
        <item name="android:titleTextStyle" tools:targetApi="11">@style/QFActionbarTextStyle</item>
    </style>

    <style name="QFActionbarTextStyle" parent="@android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Translucent.NoTitleBar.NoAni" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>

    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>

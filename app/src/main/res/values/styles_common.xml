<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="common_text_title">
        <item name="android:textSize">@dimen/common_text_title</item>
        <item name="android:textColor">@color/common_text_black</item>
    </style>
    <style name="common_text_content_big">
        <item name="android:textSize">@dimen/common_text_content_big</item>
        <item name="android:textColor">@color/common_text_grey</item>
    </style>
    <style name="common_text_content_mid">
        <item name="android:textSize">@dimen/common_text_content_mid</item>
        <item name="android:textColor">@color/common_text_grey</item>
    </style>
    <style name="common_text_content_small">
        <item name="android:textSize">@dimen/common_text_content_small</item>
        <item name="android:textColor">@color/common_text_grey</item>
    </style>

    <style name="form_line">
        <item name="android:background">@color/common_line_grey</item>
    </style>
    <style name="form_line_horizontal" parent="form_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
    <style name="form_line_vertical" parent="form_line">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>

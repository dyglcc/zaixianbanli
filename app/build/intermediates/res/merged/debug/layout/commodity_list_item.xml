<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="fill_parent"
        android:layout_height="105dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

        <com.makeramen.RoundedImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/list_item_default"
            android:scaleType="centerCrop"
            app:border_color="@color/common_line_grey"
            app:border_width="0dp"
            app:corner_radius="5dp"
            app:mutate_background="true"
            app:oval="false" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="fill_parent"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/common_text_content_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="你好你好你好你好你好你好你好你好你好你好你好你好"
                    android:textColor="@color/common_text_black" />

                <ImageView
                    android:id="@+id/iv_promotation"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="3dip"
                    android:src="@drawable/promotion_icon" />

                <ImageView
                    android:id="@+id/iv_top"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="3dip"
                    android:src="@drawable/icon_top" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/common_text_content_big"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/item_title_price" />

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/common_text_content_big"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:ellipsize="end"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/common_text_content_big"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/item_title_stock" />

                    <TextView
                        android:id="@+id/tv_stock"
                        style="@style/common_text_content_big"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="nihao" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:baselineAligned="false"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/common_text_content_big"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/item_title_date" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/common_text_content_big"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/common_text_content_big"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/item_title_salesvolume" />

                    <TextView
                        android:id="@+id/tv_salesvolume"
                        style="@style/common_text_content_big"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/common_text_red" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@id/ll_content"
        android:background="@drawable/commodity_list_item_menu_bg"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <LinearLayout
            android:id="@+id/ll_menu_share"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share_item_icon" />

            <TextView
                android:id="@+id/tv_menu_share"
                style="@style/common_text_content_small"
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/item_menu_title_share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_promotation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_menu_promo" />

            <TextView
                android:id="@+id/tv_menu_promotation"
                style="@style/common_text_content_small"
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/item_menu_title_promotation" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_edit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/edit_item" />

            <TextView
                android:id="@+id/tv_menu_edit"
                style="@style/common_text_content_small"
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/item_menu_title_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_top"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_menu_top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/shopmanager_item_top" />

            <TextView
                android:id="@+id/tv_menu_top"
                style="@style/common_text_content_small"
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/item_menu_title_top" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_preview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/preview_item" />

            <TextView
                android:id="@+id/tv_menu_preview"
                style="@style/common_text_content_small"
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/item_menu_title_preview" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_offshelf"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/carriage_item" />

            <TextView
                android:id="@+id/tv_menu_offshelf"
                style="@style/common_text_content_small"
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/item_menu_title_offshelf" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/ll_menu"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/common_line_grey" />

    <ImageView
        android:id="@+id/iv_indicator"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/commodity_item_indicator" />

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_reg_bank"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        layout="@layout/title_show_bank_info" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="请选择以下方式向买家发起收款：" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="fill_parent"
                android:layout_height="44dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/selector_main_reds"
                android:paddingLeft="14dip"
                android:paddingRight="14dip"
                android:singleLine="true"
                android:text="微信朋友"
                android:textColor="@color/selector_color_title_press"
                android:textSize="20dip" />

            <Button
                android:id="@+id/btn_smg"
                android:layout_width="fill_parent"
                android:layout_height="44dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/selector_main_reds"
                android:paddingLeft="14dip"
                android:paddingRight="14dip"
                android:singleLine="true"
                android:text="短信提醒"
                android:textColor="@color/selector_color_title_press"
                android:textSize="20dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
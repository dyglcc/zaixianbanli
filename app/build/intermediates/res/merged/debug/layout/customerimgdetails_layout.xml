<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg_color" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="64dip"
            android:layout_height="@dimen/title_height"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/arrow_title_left"
            android:text="@string/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="6dip"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="180dip"
            android:singleLine="true"
            android:text="选择图片"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/customergallery_button_bg_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="完成"
            android:textColor="@color/title_bg_color" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_img"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#90000000" >

        <CheckBox
            android:id="@+id/cb_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:button="@drawable/customergallery_item_cb_select"
            android:text="选择"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>